{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src", 
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs"
  ],
  "exclude": [
    "src/examples/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
} 